<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/normal_100"
    app:cardMaxElevation="@dimen/small_100"
    android:layout_marginVertical="@dimen/small_100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/normal_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_click">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Xavi Kembali ke Barca"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="@dimen/h5"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_news_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="Nur Muhammad Syaifuddin"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/small_100"
            app:layout_constraintTop_toBottomOf="@id/tv_news_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tv_news_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="Xavi akhirnya kembali ke Barcaleno"
            android:textSize="@dimen/h6"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/normal_100"
            app:layout_constraintTop_toBottomOf="@id/tv_news_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>